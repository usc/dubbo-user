<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
      http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.2.xsd">

    <aop:aspectj-autoproxy />

    <bean id="performanceInterceptor" class="com.alibaba.dubbo.user.provider.aspect.PerformanceInterceptor" />
    <aop:config>
        <aop:aspect ref="performanceInterceptor">
            <aop:pointcut id="controller" expression="execution(* com.alibaba.dubbo.user.provider.service.*.*(..))" />
            <aop:around pointcut-ref="controller" method="invoke" />
        </aop:aspect>
    </aop:config>
</beans>
